@charset "UTF-8"

body
    margin 0px
    padding 0px
    background-image url("../img/bg.jpg")
    background-image 100% 100%

#main, #signUpForm
    height 400px
    width 400px
    background-color white
    box-shadow  0 0 0 30px rgba(255,255,255,0.2)
    position fixed
    border-radius 50%
    top 50%
    left 50%
    transform translate(-50%,  -50%)  rotateY(0deg)

table
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

#title
    font-family calibri
    font-size 30px
    color #222
    text-align center


hr
    margin 5px auto
    padding 0px

input[type=text], input[type=password], input[type=email]
    height 10px
    width 250px
    font-family sans-serif
    font-size 11px
    border-radius 35px
    border none 
    outline none 
    border 1px solid darkgray 
    padding: 20px

#frt
    font-family calibri
    color #222
    font-size 12px

#signInBtn, #signUnBtn
    height 35px
    width 250px
    font-family calibri
    color #fff
    font-size 14px
    line-height 0px
    border none
    outline none 
    background-color #ff5b3f
    border-radius 35px
    padding 20px

#signUpMSg, #signInMSg
    font-family: calibri    
    font-size: 12px
    color: #777

a
    color: #313aa3

#signInBtn, #signUnBtn
    &:hover
        cursor pointer
        background-color: #f9d1ca
        color: #000000


/****************************************************************************************
*                   SECCIÓN OCULTAR FORMULARIO DE REGISTRO                              *
****************************************************************************************/
#main
    -webkit-backface-visibility: hidden
    -webkit-animation-duration: 2s

#signUpForm
    -webkit-backface-visibility: hidden
    -moz-backface-visibility: hidden
    -webkit-transform: translate(-50%,  -50%) rotateY(180deg)
    -webkit-animation-duration: 2s

/************************** FIN SECCIÓN OCULTAR FORMULARIO DE REGISTRO*******************/

/****************************************************************************************
*                   SECCIÓN DONDE SE CREAN LOS FRAMES MAESTROS                          *
*                   QUE SERAN INVOCADOS CUANDO SE DE CLIC EN EL                         *
*                   HIPER ENLACE  DE SIGN UP.                                            *
****************************************************************************************/
@keyframes showSignUp
    0%{transform: translate(-50%, -50%) rotateY(0deg);}
    100%{transform: translate(-50%, -50%) rotateY(180deg);}

@keyframes hideSignIn
    0%{transform: translate(-50%, -50%) rotateY(180deg);}
    100%{transform: translate(-50%, -50%) rotateY(0deg);}

@keyframes showSignIn
    0%{transform: translate(-50%, -50%) rotateY(0deg);}
    100%{transform: translate(-50%, -50%) rotateY(180deg);}

@keyframes hideSignUp
    0%{transform: translate(-50%, -50%) rotateY(180deg);}
    100%{transform: translate(-50%, -50%) rotateY(0deg);}
/************************* FIN SECCIÓN DE CREACIÓN DE FRAMES MAESTROS*******************/